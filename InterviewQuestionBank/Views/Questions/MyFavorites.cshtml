@model List<InterviewQuestionBank.Models.UserFavorite>
@{
    ViewData["Title"] = "My Favorites";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="fw-bold">
                <i class="fas fa-star text-warning me-2"></i>My Favorite Questions
            </h2>
            <p class="text-muted">Questions you've bookmarked for quick access</p>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="alert alert-info mb-4">
            <i class="fas fa-info-circle me-2"></i>
            You have <strong>@Model.Count</strong> favorite question@(Model.Count != 1 ? "s" : "")
        </div>

        <div class="row g-3">
            @foreach (var favorite in Model)
            {
                <div class="col-12">
                    <div class="card shadow-sm hover-lift border-start border-4" style="border-color: @favorite.Question.Category.ColorCode !important;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge bg-primary me-2">Q@favorite.Question.QuestionNumber</span>
                                        <span class="badge @GetDifficultyBadgeClass(favorite.Question.Difficulty) me-2">
                                            @favorite.Question.Difficulty
                                        </span>
                                        <span class="badge" style="background-color: @favorite.Question.Category.ColorCode;">
                                            <i class="fas @favorite.Question.Category.Icon me-1"></i>
                                            @favorite.Question.Category.Name
                                        </span>
                                    </div>
                                    <h5 class="card-title mb-2">
                                        <a asp-action="Details" asp-route-id="@favorite.Question.Id" class="text-decoration-none text-dark">
                                            @favorite.Question.Title
                                        </a>
                                    </h5>
                                    <div class="d-flex align-items-center text-muted small">
                                        <span class="me-3">
                                            <i class="fas fa-bookmark me-1"></i>
                                            Saved: @favorite.AddedDate.ToString("MMM dd, yyyy")
                                        </span>
                                        <span>
                                            <i class="fas fa-eye me-1"></i>
                                            @favorite.Question.ViewCount views
                                        </span>
                                    </div>
                                </div>
                                <div class="ms-3">
                                    <a asp-action="Details" asp-route-id="@favorite.Question.Id" class="btn btn-outline-primary btn-sm">
                                        View <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm text-center py-5">
            <div class="card-body">
                <i class="far fa-star fa-4x text-muted mb-3"></i>
                <h4>No Favorite Questions Yet</h4>
                <p class="text-muted mb-4">
                    Start adding questions to your favorites by clicking the star icon when viewing questions.
                </p>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>Browse Questions
                </a>
            </div>
        </div>
    }
</div>

@functions {
    string GetDifficultyBadgeClass(InterviewQuestionBank.Models.DifficultyLevel difficulty)
    {
        return difficulty switch
        {
            InterviewQuestionBank.Models.DifficultyLevel.Beginner => "bg-success",
            InterviewQuestionBank.Models.DifficultyLevel.Intermediate => "bg-warning text-dark",
            InterviewQuestionBank.Models.DifficultyLevel.Advanced => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <style>
        .hover-lift {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .hover-lift:hover {
            transform: translateX(5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1) !important;
        }
    </style>
}
