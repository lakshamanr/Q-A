@model List<InterviewQuestionBank.Models.UserProgress>
@{
    ViewData["Title"] = "My Progress";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="fw-bold">
                <i class="fas fa-chart-line me-2"></i>My Learning Progress
            </h2>
            <p class="text-muted">Track your interview preparation journey</p>
        </div>
    </div>

    <!-- Progress Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-tasks fa-3x text-primary"></i>
                    </div>
                    <h3 class="fw-bold text-primary">@ViewBag.CompletedCount</h3>
                    <p class="text-muted mb-0">Questions Completed</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-list fa-3x text-info"></i>
                    </div>
                    <h3 class="fw-bold text-info">@ViewBag.TotalQuestions</h3>
                    <p class="text-muted mb-0">Total Questions</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-percentage fa-3x text-success"></i>
                    </div>
                    <h3 class="fw-bold text-success">@ViewBag.ProgressPercentage%</h3>
                    <p class="text-muted mb-0">Completion Rate</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Progress Bar -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="fw-bold">Overall Progress</span>
                <span class="text-muted">@ViewBag.CompletedCount / @ViewBag.TotalQuestions</span>
            </div>
            <div class="progress" style="height: 30px;">
                <div class="progress-bar bg-success progress-bar-striped progress-bar-animated"
                     role="progressbar"
                     style="width: @ViewBag.ProgressPercentage%"
                     aria-valuenow="@ViewBag.ProgressPercentage"
                     aria-valuemin="0"
                     aria-valuemax="100">
                    @ViewBag.ProgressPercentage%
                </div>
            </div>
        </div>
    </div>

    <!-- Completed Questions -->
    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-check-circle text-success me-2"></i>
                    Completed Questions
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @foreach (var progress in Model)
                    {
                        <div class="col-12">
                            <div class="card border hover-lift">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="fas fa-check-circle text-success me-2"></i>
                                                <span class="badge bg-primary me-2">Q@progress.Question.QuestionNumber</span>
                                                <span class="badge @GetDifficultyBadgeClass(progress.Question.Difficulty) me-2">
                                                    @progress.Question.Difficulty
                                                </span>
                                                <span class="badge" style="background-color: @progress.Question.Category.ColorCode;">
                                                    <i class="fas @progress.Question.Category.Icon me-1"></i>
                                                    @progress.Question.Category.Name
                                                </span>
                                            </div>
                                            <h6 class="card-title mb-2">
                                                <a asp-action="Details" asp-route-id="@progress.Question.Id" class="text-decoration-none text-dark">
                                                    @progress.Question.Title
                                                </a>
                                            </h6>
                                            <div class="text-muted small">
                                                <i class="fas fa-calendar-check me-1"></i>
                                                Completed: @progress.CompletedDate?.ToString("MMM dd, yyyy HH:mm")
                                            </div>
                                        </div>
                                        <div class="ms-3">
                                            <a asp-action="Details" asp-route-id="@progress.Question.Id" class="btn btn-outline-primary btn-sm">
                                                Review <i class="fas fa-arrow-right ms-1"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm text-center py-5">
            <div class="card-body">
                <i class="far fa-chart-bar fa-4x text-muted mb-3"></i>
                <h4>No Progress Yet</h4>
                <p class="text-muted mb-4">
                    Start marking questions as completed to track your progress!
                </p>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>Start Learning
                </a>
            </div>
        </div>
    }

    <!-- Study Tips -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-lightbulb me-2"></i>Study Tips
            </h5>
        </div>
        <div class="card-body">
            <ul class="mb-0">
                <li>Study consistently - aim for at least 5-10 questions per day</li>
                <li>Review completed questions periodically to reinforce learning</li>
                <li>Practice explaining answers out loud to improve retention</li>
                <li>Focus on understanding concepts, not just memorizing answers</li>
                <li>Take breaks between study sessions to avoid burnout</li>
            </ul>
        </div>
    </div>
</div>

@functions {
    string GetDifficultyBadgeClass(InterviewQuestionBank.Models.DifficultyLevel difficulty)
    {
        return difficulty switch
        {
            InterviewQuestionBank.Models.DifficultyLevel.Beginner => "bg-success",
            InterviewQuestionBank.Models.DifficultyLevel.Intermediate => "bg-warning text-dark",
            InterviewQuestionBank.Models.DifficultyLevel.Advanced => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <style>
        .hover-lift {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .hover-lift:hover {
            transform: translateX(5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1) !important;
        }
    </style>
}
